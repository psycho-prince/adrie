# .env.example
# This file contains example environment variables for the ADRIE application.
# Copy this file to .env and fill in your actual values.

# Application Settings
APP_NAME="ADRIE"
APP_VERSION="0.1.0"
ENVIRONMENT="development" # Set to 'production' for deployment

# LLM Settings for Explainability Module
# Choose your LLM provider (e.g., 'mock', 'google_gemini', 'openai')
LLM_PROVIDER="mock"
# If using Google Gemini, provide your API Key
# GOOGLE_GEMINI_API_KEY="your_google_gemini_api_key_here"
# If using OpenAI, provide your API Key
# OPENAI_API_KEY="your_openai_api_key_here"

# Database Settings (uncomment and configure if persistence is needed)
# DATABASE_URL="sqlite:///./adrie.db" # Example for SQLite

# Simulation Defaults (can be overridden by API requests)
# DEFAULT_MAP_SIZE=50
# DEFAULT_HAZARD_INTENSITY_FACTOR=0.5
# DEFAULT_NUM_VICTIMS=10
# DEFAULT_NUM_AGENTS=3

# Logging Settings
LOG_LEVEL="INFO" # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH="logs/adrie.log" # Path relative to the project root
